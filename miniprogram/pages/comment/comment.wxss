/* pages/comment/comment.wxss */
/* 背景图片 */
.detail-bg{
  height:400rpx;
  opacity: .9;
  filter: blur(40rpx); /*高斯模糊滤镜*/

}
/* 遮罩层 */
.detail-mask{
  position:absolute;
  left:0;
  top:0;
  z-index: -1;
  width:100%;
  height:400rpx;
  background: #444444;
}
/* 电影详情信息 */
.detail-info{
  position:absolute;
  top:0;
  left:0;
  width: 100%;
  height:400rpx;
  padding:20rpx;
  display:flex;
}
/* 左侧图片 */
.detail-img{
  width:280rpx;
  height:90%;
  margin-right:24rpx
}
/* 右侧文字区域 */
.detail{
  line-height:60rpx;
    color:#fff;
  font-size:24rpx;
}
/* 预览上传的图片 */
.comment-img{
  width:200rpx;
  height: 200rpx;
  margin-right:20rpx;
}
